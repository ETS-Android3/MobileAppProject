<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="25dp"
    android:background="#033F63"
    android:layout_marginBottom="?attr/actionBarSize"
    tools:context=".ChangePassword">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/resetGradient"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingTop="40dp"
            android:paddingBottom="40dp">

            <TextView
                android:id="@+id/textView22"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:text="CHANGE PASSWORD"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_border_white"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp">

                <EditText
                    android:id="@+id/etvCurrentPass"
                    android:layout_width="291dp"
                    android:layout_height="55dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="40dp"
                    android:drawableStart="@drawable/ic_lock"
                    android:drawablePadding="20dp"
                    android:ems="10"
                    android:fontFamily="@font/roboto"
                    android:hint="Current Password"
                    android:longClickable="false"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:textColor="?attr/colorControlNormal"
                    android:textColorHint="?attr/colorControlNormal"
                    android:textSize="16sp" />

                <ImageButton
                    android:id="@+id/imgPassVisibility1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="center"
                    android:layout_marginStart="250dp"
                    android:layout_marginTop="44dp"
                    android:layout_marginEnd="2dp"
                    android:background="#00FFFFFF"
                    android:minWidth="48dp"
                    android:minHeight="48dp"
                    app:srcCompat="@drawable/ic_visibility_off" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp">

                <EditText
                    android:id="@+id/etvNewPass"
                    android:layout_width="291dp"
                    android:layout_height="55dp"
                    android:layout_gravity="center"
                    android:drawableStart="@drawable/ic_lock"
                    android:drawablePadding="20dp"
                    android:ems="10"
                    android:fontFamily="@font/roboto"
                    android:hint="New Password"
                    android:inputType="textPassword"
                    android:longClickable="false"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:textColor="?attr/colorControlNormal"
                    android:textColorHint="?attr/colorControlNormal"
                    android:textSize="16sp" />

                <ImageButton
                    android:id="@+id/imgPassVisibility2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="center"
                    android:layout_marginStart="251dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="1dp"
                    android:background="#00FFFFFF"
                    android:minWidth="48dp"
                    android:minHeight="48dp"
                    app:srcCompat="@drawable/ic_visibility_off" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp">

                <EditText
                    android:id="@+id/etvConfNewPass"
                    android:layout_width="291dp"
                    android:layout_height="55dp"
                    android:layout_gravity="center"
                    android:drawableStart="@drawable/ic_lock"
                    android:drawablePadding="20dp"
                    android:ems="10"
                    android:fontFamily="@font/roboto"
                    android:hint="Confirm New Password"
                    android:inputType="textPassword"
                    android:longClickable="false"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:textColor="?attr/colorControlNormal"
                    android:textColorHint="?attr/colorControlNormal"
                    android:textSize="16sp" />

                <ImageButton
                    android:id="@+id/imgPassVisibility3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="center"
                    android:layout_marginStart="251dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="1dp"
                    android:background="#00FFFFFF"
                    android:minWidth="48dp"
                    android:minHeight="48dp"
                    app:srcCompat="@drawable/ic_visibility_off" />
            </RelativeLayout>

            <Button
                android:id="@+id/btnChangePassword"
                android:layout_width="291dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="70dp"
                android:background="@drawable/border_change_password"
                android:fontFamily="@font/roboto"
                android:text="Change Password"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="15sp" />

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="291dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/border_logout"
                android:fontFamily="@font/roboto"
                android:text="Cancel"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="15sp" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>